UART_HandleTypeDef huart4;
UART_HandleTypeDef huart1;

/* USER CODE BEGIN PV */
#define VDDA_VOLTS    3.3f
#define VBAT_DIV_GAIN 3.2f   // (220k+100k)/100k

uint16_t adc_buf[2]; // [0]=X, [1]=Y

uint16_t yaw = 0;
uint16_t battery_adc = 0;
int battery_percent = 0;

volatile uint8_t tx_flag = 0;
volatile uint8_t button1_flag = 0;
volatile uint8_t button2_flag = 0;
volatile uint8_t button3_flag = 0;

uint32_t last_bat_ms = 0;
char msg[64];

/* USER CODE END PV */

