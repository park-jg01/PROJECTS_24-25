static void MX_ADC3_Init(void);
static void MX_ADC2_Init(void);
static void MX_CRC_Init(void);
/* USER CODE BEGIN PFP */
static inline float VBAT_from_ADC(uint16_t raw) {
    float v_adc = ((float)raw / 65535.0f) * VDDA_VOLTS;  // ADC핀 전압
    return v_adc * VBAT_DIV_GAIN;                        // 분압 역산
}

typedef struct { float v; uint8_t pct; } VP;
static const VP soc_lut[] = {
  {4.20f,100},{4.10f,96},{4.05f,92},{4.00f,88},{3.95f,84},
  {3.92f,80},{3.89f,76},{3.86f,72},{3.83f,68},{3.80f,64},
  {3.70f,50},{3.65f,40},{3.62f,32},{3.60f,27},{3.55f,18},
  {3.50f,12},{3.45f, 6},{3.30f, 0}
};

static int SoC_from_V(float v)
{
    // 경계 클램프
    if (v >= soc_lut[0].v) return 100;
    int last = (int)(sizeof(soc_lut)/sizeof(soc_lut[0])) - 1;
    if (v <= soc_lut[last].v) return 0;

    // 구간 탐색 + 선형보간
    for (int i = 0; i < last; i++) {
        if (v >= soc_lut[i+1].v) {
            float x0 = soc_lut[i].v,   x1 = soc_lut[i+1].v;
            float y0 = soc_lut[i].pct, y1 = soc_lut[i+1].pct;
            float t  = (v - x1) / (x0 - x1);
            int p = (int)(y1 + t * (y0 - y1) + 0.5f);
            if (p < 0) p = 0;
            if (p > 100) p = 100;
            return p;
        }
    }
    return 0;
}

static void Safety_AutoDisarm(void)
{
    uint16_t mid_adc = 32768;  // 조이스틱 중앙값

    char msg[64];
    snprintf(msg, sizeof(msg),
             "AT+DATA=X=%u,Y=%u,YAW=%u,BAT=%d%%,D1=0,D2=0,D3=1\r\n",
             mid_adc, mid_adc, mid_adc, battery_percent);

    HAL_UART_Transmit(&huart1, (uint8_t*)msg, strlen(msg), HAL_MAX_DELAY);
}

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
TIM_HandleTypeDef htim2;

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MPU Configuration--------------------------------------------------------*/
  MPU_Config();

  /* Enable the CPU Cache */

  /* Enable I-Cache---------------------------------------------------------*/
  SCB_EnableICache();

  /* Enable D-Cache---------------------------------------------------------*/
  SCB_EnableDCache();

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* Configure the peripherals common clocks */
  PeriphCommonClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_BDMA_Init();
  MX_ADC1_Init();
  MX_USART1_UART_Init();
  MX_TIM2_Init();
  MX_I2C1_Init();
  MX_ADC3_Init();
  MX_ADC2_Init();
  MX_CRC_Init();
  MX_X_CUBE_AI_Init();
  /* USER CODE BEGIN 2 */

  HAL_TIM_Base_Start_IT(&htim2);
  OLED_Init();
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
	  if (tx_flag)
	        {
	            tx_flag = 0;
	            MX_X_CUBE_AI_Process();

	            // === X/Y ADC1 변환 ===
	            ADC_ChannelConfTypeDef sConfig = {0};

	            // X축 (ADC1_IN11)
	            sConfig.Channel = ADC_CHANNEL_11;
	            sConfig.Rank = ADC_REGULAR_RANK_1;
	            sConfig.SamplingTime = ADC_SAMPLETIME_1CYCLE_5;
	            sConfig.SingleDiff = ADC_SINGLE_ENDED;
	            HAL_ADC_ConfigChannel(&hadc1, &sConfig);
	            HAL_ADC_Start(&hadc1);
	            HAL_ADC_PollForConversion(&hadc1, HAL_MAX_DELAY);
	            adc_buf[0] = HAL_ADC_GetValue(&hadc1);
	            HAL_ADC_Stop(&hadc1);

	            // Y축 (ADC1_IN14)
	            sConfig.Channel = ADC_CHANNEL_14;
	            HAL_ADC_ConfigChannel(&hadc1, &sConfig);
	            HAL_ADC_Start(&hadc1);
	            HAL_ADC_PollForConversion(&hadc1, HAL_MAX_DELAY);
	            adc_buf[1] = HAL_ADC_GetValue(&hadc1);
	            HAL_ADC_Stop(&hadc1);

	            // === YAW ADC2 변환 ===
	            HAL_ADC_Start(&hadc2);
	            if (HAL_ADC_PollForConversion(&hadc2, HAL_MAX_DELAY) == HAL_OK)
	                yaw = HAL_ADC_GetValue(&hadc2);
	            HAL_ADC_Stop(&hadc2);

	            // === 버튼 상태 읽기 ===
	            button1_flag = (HAL_GPIO_ReadPin(GPIOD, GPIO_PIN_1) == GPIO_PIN_RESET);
	            button2_flag = (HAL_GPIO_ReadPin(GPIOD, GPIO_PIN_2) == GPIO_PIN_RESET);
	            button3_flag = (HAL_GPIO_ReadPin(GPIOD, GPIO_PIN_3) == GPIO_PIN_RESET);

	            // === 5초마다 배터리 측정 & 업데이트 ===
	            uint32_t now = HAL_GetTick();
	            if (now - last_bat_ms >= 5000) {
	                HAL_ADC_Start(&hadc3);
	                if (HAL_ADC_PollForConversion(&hadc3, 1) == HAL_OK)
	                    battery_adc = HAL_ADC_GetValue(&hadc3);
	                HAL_ADC_Stop(&hadc3);

	                float vbat = VBAT_from_ADC(battery_adc);
	                static float vbat_avg = 0.0f;
	                vbat_avg = (vbat_avg == 0.0f) ? vbat : (0.98f * vbat_avg + 0.02f * vbat);
	                battery_percent = SoC_from_V(vbat_avg);

	                last_bat_ms = now;

	                // OLED는 배터리 갱신될 때만 출력
	                if (hi2c1.State == HAL_I2C_STATE_READY) {
	                    char bat_msg[10];
	                    sprintf(bat_msg, "%3d%%", battery_percent);
	                    OLED_ShowChar(38, 5, (unsigned char *)bat_msg, 2);
	                }
	                // === 배터리 10% 이하일 때 안전 착륙 신호 전송 ===
	                if (battery_percent <= 10) {
	                	Safety_AutoDisarm();
	                }
	            }
	            // === UART 전송 (조이스틱/버튼은 항상, 배터리는 최신 값만) ===
	            snprintf(msg, sizeof(msg),
	                     "AT+DATA=X=%u,Y=%u,YAW=%u,BAT=%d%%,D1=%u,D2=%u,D3=%u\r\n",
	                     x_final, y_final, yaw, battery_percent,
	                     button1_flag, button2_flag, button3_flag);

	            HAL_UART_Transmit(&huart1, (uint8_t*)msg, strlen(msg), HAL_MAX_DELAY);
	        }
	    }

  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Supply configuration update enable
  */
  HAL_PWREx_ConfigSupply(PWR_LDO_SUPPLY);

  /** Configure the main internal regulator output voltage
  */
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE0);

  while(!__HAL_PWR_GET_FLAG(PWR_FLAG_VOSRDY)) {}

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSE;
  RCC_OscInitStruct.HSEState = RCC_HSE_BYPASS;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSE;
  RCC_OscInitStruct.PLL.PLLM = 5;
  RCC_OscInitStruct.PLL.PLLN = 192;
  RCC_OscInitStruct.PLL.PLLP = 2;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  RCC_OscInitStruct.PLL.PLLRGE = RCC_PLL1VCIRANGE_2;
  RCC_OscInitStruct.PLL.PLLVCOSEL = RCC_PLL1VCOWIDE;
  RCC_OscInitStruct.PLL.PLLFRACN = 0;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2
                              |RCC_CLOCKTYPE_D3PCLK1|RCC_CLOCKTYPE_D1PCLK1;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.SYSCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB3CLKDivider = RCC_APB3_DIV2;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_APB1_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_APB2_DIV2;
  RCC_ClkInitStruct.APB4CLKDivider = RCC_APB4_DIV2;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_4) != HAL_OK)
  {
    Error_Handler();
  }
}

